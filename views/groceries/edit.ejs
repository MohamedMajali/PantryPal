<h1>Edit <%= grocery.name %></h1>

<form action="/groceries/<%= grocery._id %>?_method=PUT" method="POST">
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= grocery.name %>" required>
  <br>
  <label for="category">Category:</label>
  <input type="text" name="category" value="<%= grocery.category %>" required>
  <br>
  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" value="<%= grocery.quantity %>" required>
  <br>
  <label for="price">Price:</label>
  <input type="number" step="0.01" name="price" value="<%= grocery.price %>" required>
  <br>
  <label for="brand">Brand:</label>
  <input type="text" name="brand" value="<%= grocery.brand %>">
  <br>
  <label for="image">Image URL:</label>
  <input type="text" name="image" value="<%= grocery.image %>">
  <br>
  <button type="submit">Update Grocery</button>
</form>

<a href="/groceries/<%= grocery._id %>">Cancel</a>
